<Window x:Class="BookStoreManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="850" ResizeMode="NoResize">
    
    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}">

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="366" Margin="0,28,0,0" VerticalAlignment="Top" Width="786" Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>

        <TextBlock x:Name="Descrition" HorizontalAlignment="Left" Height="16" Margin="109,82,0,0" TextWrapping="Wrap" Text="Please fill your ID number and Password for login" VerticalAlignment="Top" Width="349"/>
        <TextBlock x:Name="Email" HorizontalAlignment="Left" Height="26" Margin="109,118,0,0" TextWrapping="Wrap" Text="E-mail" VerticalAlignment="Top" Width="105"/>
        <TextBox x:Name="Email_txt" HorizontalAlignment="Left" Height="26" Margin="219,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233"/>
        <TextBlock x:Name="PassWord" HorizontalAlignment="Left" Height="24" Margin="109,154,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="105"/>
        <PasswordBox x:Name="Password_txt" HorizontalAlignment="Left" Height="24" Margin="219,154,0,0" VerticalAlignment="Top" Width="233"/>
        <Button x:Name="Log_In" Content="Log In" HorizontalAlignment="Left" Margin="172,209,0,0" VerticalAlignment="Top" Height="33" Width="130" Click="Log_In_Click"/>
        <Button x:Name="Sign_Up" Content="Sign Up" HorizontalAlignment="Left" Margin="322,209,0,0" VerticalAlignment="Top" Height="33" Width="130" Click="Sign_Up_Click"/>


    </Grid>
    
</Window>
