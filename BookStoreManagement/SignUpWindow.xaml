<Window x:Class="BookStoreManagement.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStoreManagement"
        mc:Ignorable="d"
        Title="SignUpWindow" Height="450" Width="800">

    <Grid Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="366" Margin="0,28,0,0" VerticalAlignment="Top" Width="786" Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
        <TextBlock x:Name="first_Name" HorizontalAlignment="Left" Height="23" Margin="76,106,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="last_Name" HorizontalAlignment="Left" Height="23" Margin="76,134,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="email" HorizontalAlignment="Left" Height="23" Margin="76,228,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="first_Name_txt" HorizontalAlignment="Left" Height="23" Margin="192,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="426"/>
        <TextBlock x:Name="address" HorizontalAlignment="Left" Height="23" Margin="76,171,0,0" TextWrapping="Wrap" Text="Address" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="last_Name_txt" HorizontalAlignment="Left" Height="23" Margin="192,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="426" />
        <TextBox x:Name="address_txt" HorizontalAlignment="Left" Height="23" Margin="192,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="426"/>
        <TextBox x:Name="email_txt" HorizontalAlignment="Left" Height="24" Margin="192,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="426"/>
        <Button x:Name="Sign_Up" Content="Sign Up" HorizontalAlignment="Left" Margin="377,313,0,0" VerticalAlignment="Top" Height="33" Width="119" Click="Sign_Up_Click"/>
        <TextBlock x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="76,260,0,0" TextWrapping="Wrap" Text="Design Password" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="Password_txt" HorizontalAlignment="Left" Height="23" Margin="192,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="426"/>
        <TextBlock x:Name="Description01" HorizontalAlignment="Left" Height="16" Margin="76,66,0,0" TextWrapping="Wrap" Text="Kindly fill your information for sign up into Bookstore Database" VerticalAlignment="Top" Width="349"/>
        <TextBlock x:Name="Description02" HorizontalAlignment="Left" Height="16" Margin="192,288,0,0" TextWrapping="Wrap" Text="(Minimum 8 characters)" VerticalAlignment="Top" Width="152" RenderTransformOrigin="0.519,0.889"/>
        <Button x:Name="back" Content="Back" HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="114" Click="back_Click" Margin="504,314,0,0"/>
    </Grid>
    
</Window>
